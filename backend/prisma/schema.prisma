generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  author      String
  // img         String

  cards Card[]
}

model Card {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  author   String
  gifUrl   String
  gifTitle String

  board   Board @relation(fields: [boardId], references: [id])
  boardId Int
}
